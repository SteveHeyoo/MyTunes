    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Song information:" />
        <Label layoutX="14.0" layoutY="70.0" text="Title:" />
        <Label layoutX="16.0" layoutY="117.0" text="Artist:" />
        <Label layoutX="14.0" layoutY="160.0" text="Category:" />
        <TextField fx:id="txtTitle" layoutX="85.0" layoutY="65.0" prefHeight="30.0" prefWidth="275.0" />
        <TextField fx:id="txtArtist" layoutX="85.0" layoutY="112.0" prefHeight="30.0" prefWidth="275.0" />
        <ComboBox fx:id="cbCategory" layoutX="85.0" layoutY="155.0" prefWidth="150.0" />
        <Button layoutX="522.0" layoutY="355.0" mnemonicParsing="false" onAction="#handleBtnCancel" text="Cancel" />
        <Button layoutX="445.0" layoutY="355.0" mnemonicParsing="false" onAction="#handleSaveSong" prefHeight="31.0" prefWidth="64.0" text="Save" />
