        <TextField fx:id="txtTime" disable="true" layoutX="85.0" layoutY="205.0" prefHeight="30.0" prefWidth="275.0" />
        <TextField fx:id="txtFile" layoutX="85.0" layoutY="260.0" prefHeight="30.0" prefWidth="275.0" />
        <Label layoutX="14.0" layoutY="260.0" text="File:" />
        <Button layoutX="375.0" layoutY="260.0" mnemonicParsing="false" onAction="#handleBtnChoose" text="Choose" />
    </children>
